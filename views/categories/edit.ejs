<% include ../partials/header.ejs %>

<h1 class='ui header centered'>Edit category</h1>

<div class='ui segments'>
<div class='ui segment'>
    <form class='ui form' action='/<%= category %>?_method=PUT' method='POST'>
        <div class='required field'>
            <label>Change category <%= category %> to:</label>
            <input type='text' name='category' required>
        </div>
        <button class='ui button tiny teal' type='submit'>Submit</button>
    </form>
</div>

<div class='ui segment'>
    <form class='ui form' action='/<%=category%>?_method=DELETE' method='POST'>
        <div class='field'>
            <label>Delete Category</label>
            <button class='ui button danger red tiny' type='submit'>DELETE</button>
        </div>
    </form>
</div>
</div>


