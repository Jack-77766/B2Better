<% include ./partials/header.ejs %>


    
    <h1 class='center aligned ui header'><%= category %></h1>
    
    <hr>
    
    <div class="ui equal width stackable center aligned grid">
        <% subCats.forEach(function(subCat) { %>
            <div class="column">
                <a href='/<%=category%>/<%= subCat.name %>'><h2 class='inline subCat-header'><%= subCat.name %></h2></a>
            </div>
        <% }) %>
    </div>

    <hr class='hr2'>
    
    <div class="ui stackable three column center aligned grid">
        <% products.forEach(function(product){ %>
            <div class="column">
                <div class="ui card">
                      <div class='image'>
                          <img src='/images/present.jpg'>
                      </div>
                      <div class="content">
                         <div class="header"><a class='product-header' 
                                                href='/<%=product.category.name%>/<%=product.sub_category.name%>/<%=product._id%>'>
                                                <%= product.name %></a>
                         </div>
                      </div>
                      <div class='content'>
                          <div class='summary'><%= product.description %></div>
                          <label class='ui tag label teal tiny'>$<%= product.price %></label>
                      </div>
                </div>
            </div>
        <% }) %>
    </div>
    
    

<% include ./partials/footer.ejs %>