<% include ../partials/header.ejs %>

<h2 class='ui header centered'>Edit product</h2>

<div class='ui segments'>
<div class='ui segment'>
    <form class='ui form' action='/<%=category%>/<%=sub_category%>/<%=product._id%>?_method=PUT' method='POST'>
        <div class='field required'>
            <label>Name</label>
            <input type='text' name='name' required>
        </div>
        <div class='field'>
            <label>Price</label></label>
            <input type='number' name='price'>
        </div>
        <div class='field'>
            <label>Description</label>
            <input type='text' name='description'>
        </div>
        <button class='ui button tiny teal' type='submit'>Submit</button>
    </form>
</div>

<div class='ui segment'>
    <form class='ui form' action='/<%=category%>/<%=sub_category%>/<%=product.id%>?_method=DELETE' method='POST'>
        <div class='field'>
            <label>Delete product</label>
            <button class='ui button danger red tiny' type='submit'>DELETE</button>
        </div>
    </form>
</div>
</div>

